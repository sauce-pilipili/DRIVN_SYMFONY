{% extends 'baseAdmin.html.twig' %}
{% block title %}modification d'une catégorie{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('_includes/_navigation.html.twig') }}
            <div class="content">
                <div class="back-central-container-title">
                    <h1>Modifier la catégorie {{ category.name }}</h1>
                    <a class="bouton-2" href="{{ path('categories_index') }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="back-central-container">
                    {{ include('categories/_form.html.twig') }}
                </div>
            </div>
        </div>
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formulaire.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/imagePreview.js') }}"></script>
{% endblock %}
